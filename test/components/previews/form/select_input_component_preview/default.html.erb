        input.input do
          select_tag(:sort,
            helpers.options_for_select([["Option 1", "1"], ["Option 2", "2"]], "1"),
            class: "peer",
            data: {focused: true}
          )
        end
      end

      render Form::SelectInputComponent.new do |input|
        input.input do
          select_tag(:sort,
            helpers.options_for_select([["Option 1", "1"], ["Option 2", "2"]], "1"),
            class: "peer",
            disabled: true
          )
        end
      end
    end
