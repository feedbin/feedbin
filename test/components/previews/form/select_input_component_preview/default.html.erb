<%=
demo = Class.new(ApplicationComponent) do
  def view_template(&)
    div class: "flex gap-4" do
      render Form::SelectInputComponent.new do |input|
        input.input do
          select_tag(:sort,
            helpers.options_for_select([["Option 1", "1"], ["Option 2", "2"]], "1"),
            class: "peer"
          )
        end
      end

