<div class="modal hide fade">
  <%= form_for :subscription, url: subscriptions_path, remote: true, html: { data: {choice_form: true} } do |f| %>
    <%= hidden_field_tag 'subscription[site_url]', options.first[:site_url]  %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3>Pick your feeds</h3>
    </div>
    <div class="modal-body">
			<p>This website has multiple feed options. Select the feeds youâ€™re interested in.</p>
      <% options.each do |option| %>
        <label class="checkbox">
          <%= check_box_tag "subscription[feeds][feed_url][]", option[:href] %> <%= option[:title] %>
        </label>
      <% end %>
    </div>
    <div class="modal-footer">
      <button class="button" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit 'Subscribe', class: 'button button-primary' %>
    </div>
  <% end %>
</div>
