<%= render Settings::ControlRowComponent.new do |row| %>
  <% if action.title.present? %>
    <% row.title do %>
      <strong class="font-bold"><%= action.title %></strong>
    <% end %>
  <% end %>
  <% row.description do %>
    <div class="break-words">
      <%= render(partial: "actions/text_description", locals: {action: action, summary: summary}) %>
    </div>
  <% end %>
  <% row.control do %>
    <% if action.broken? %>
      <%= svg_tag "icon-error-message" %>
    <% end %>
    <%= link_to "Edit", edit_action_path(action), class: "button button-secondary", title: action.broken? ? "Invalid Action" : ""  %>
  <% end %>
<% end %>
