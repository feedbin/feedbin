<div class="settings-content-inner">
    <div class="settings-outer">
        <div class="back-arrow">
            <%= link_to '', '/' %>
            <h2 class="settings-title">
                Account
            </h2>
        </div>
    </div>

  <div class="inset">
    <%= form_for(@user) do |f| %>
      <div class="inset-content">
        <h4 class="group-header">Email</h4>
      </div>
      <ul class="control-group control-group-form">
        <li>
          <%= f.email_field :email, placeholder: 'Email' %>
        </li>
      </ul>

      <div class="description-inset">
        <%= f.submit "Update", class: "button-plain no-margin" %>
      </div>

    <% end %>
  </div>

  <div class="inset">
    <%= form_for(@user) do |f| %>
      <div class="inset-content">
        <h4 class="group-header">Update Password</h4>
      </div>
      <ul class="control-group control-group-form">
        <li>
          <%= f.password_field :old_password, placeholder: 'Old Password' %>
        </li>
        <li>
          <%= f.password_field :password, placeholder: 'New Password' %>
        </li>
      </ul>

      <div class="description-inset">
        <%= f.submit "Update", class: "button-plain  no-margin" %>
      </div>
    <% end %>
  </div>

  <div class="description-inset">
    <h3>Cancel Account</h3>
    <p class="muted">Canceling your account will end your subscription immediately. All of your data will be deleted. <strong>You cannot undo this</strong>.</p>
    <p><%= link_to "Cancel Account", user_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: 'button button-danger button-link' %></p>
  </div>
</div>