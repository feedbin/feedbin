<div class="service-options-wrap">
    <div class="service-options">
        <%= form_for(record) do |f| %>
            <%= f.hidden_field :service_id, value: sharing_service[:service_id] %>
            <%= f.hidden_field :operation, value: 'authorize' %>
            <%= text_field_tag 'username', '', placeholder: 'Username', class: 'no-margin' %>
            <%= password_field_tag 'password', '', placeholder: 'Password' %>
            <div class="button-wrap">
                <%= button_tag 'Cancel', type: "button", class: 'button button-secondary button-inline', data: {behavior: "hide_service_options"} %>
                <%= submit_tag "Save", class: 'button button-primary-plain' %>
            </div>
        <% end %>
    </div>
</div>
