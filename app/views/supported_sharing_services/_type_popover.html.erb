<%= component "settings/expandable", class: "mb-4", data: {capsule: true} do |expandable| %>
  <% expandable.description do %>
    <%= component "settings/control_row" do |row| %>
      <% row.icon do %>
        <%= render "icon", sharing_service: sharing_service %>
      <% end %>
      <% row.title { sharing_service.label } %>
      <% row.control do %>
        <% if status == :active %>
            <%= render partial: "supported_sharing_services/delete_supported_service", locals: {sharing_service: sharing_service} %>
        <% else %>
            <%= link_to 'Activate', supported_sharing_services_path(supported_sharing_service: {service_id: sharing_service.service_id }), class: 'button button-secondary', method: :post, tabindex: 0 %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
