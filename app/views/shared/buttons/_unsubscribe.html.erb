<% if subscription.blank? %>
    <button class="toolbar-button" data-behavior="unsubscribe" disabled="disabled">
        <div class="toolbar-button-inner">
            <%= render partial: "shared/svg/trash" %>
        </div>
        Delete
    </button>
<% else %>
    <%= form_tag subscription_path(subscription), remote: true, method: "delete", data: {behavior: "unsubscribe"} do %>
        <button title="Delete" class="toolbar-button" type="submit" data-confirm="Are you sure you want to unsubscribe from <%= subscription.title || subscription.feed.title %>?">
            <div class="toolbar-button-inner">
                <%= render partial: "shared/svg/trash" %>
            </div>
            Delete
        </button>
    <% end %>
<% end %>
