<div class="hide" data-behavior="link_actions_template">
    <div class="link-actions dropdown-wrap hide" data-behavior="link_actions toggle_dropdown">
        <%= svg_tag "icon-dots" %>
        <div class="dropdown-content">
            <ul>
                <li>
                    <span class="skip view-link-app" data-behavior="view_link">
                        <span class="icon-wrap">
                            <%= svg_tag "menu-icon-extract" %>
                        </span>
                        <span class="menu-text">
                            <span class="title">Extract Content</span>
                            <span class="subtitle">View link in Feedbin</span>
                        </span>
                    </span>
                    <span class="skip view-link-tab" data-behavior="view_link">
                        <span class="icon-wrap">
                            <%= svg_tag "menu-icon-tab" %>
                        </span>
                        <span class="menu-text">
                            <span class="title">Open</span>
                            <span class="subtitle">View in a new tab</span>
                        </span>
                    </span>
                    <span class="skip" data-behavior="add_to_pages">
                        <span class="icon-wrap">
                            <%= svg_tag "menu-icon-pages" %>
                        </span>
                        <span class="menu-text">
                            <span class="title">Add to Pages</span>
                            <span class="subtitle">Save to read later</span>
                        </span>
                    </span>
                </li>
            </ul>
        </div>
    </div>
</div>
