let position = $(".feeds").prop("scrollTop");

$('[data-behavior~=feeds_target]').html("<%= j(render(partial: "feeds/feeds", locals: {collections: @feed_data[:collections], saved_searches: @feed_data[:saved_searches], tags: @feed_data[:tags], feeds: @feed_data[:feeds], page_feed: @feed_data[:page_feed]})) %>")

feedbin.resort(<%= @feed_data[:feed_order].to_json.html_safe %>)
