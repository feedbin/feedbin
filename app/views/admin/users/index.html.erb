<%= render Settings::H1Component.new do %>
  Customer Admin
<% end %>

<div class="mb-4">
  <%= form_tag(admin_users_path, method: "get") do %>
    <%= render Form::TextInputComponent.new do |text| %>
      <% text.input do %>
        <input name="q" type="text" class="peer text-input" data-behavior="user_search" placeholder="Search Customers" />
      <% end %>
      <% text.accessory_leading do %>
        <%= svg_tag "icon-search", class: "ml-2 fill-400 pg-focus:fill-blue-600" %>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= render Settings::ControlGroupComponent.new class: "mb-14" do |group| %>
  <% @users.each do |user| %>
    <% group.item do %>
      <div data-behavior="<%= user.customer_id %>">
        <%= render partial: "user", locals: {user: user} %>
      </div>
    <% end %>
  <% end %>
<% end %>