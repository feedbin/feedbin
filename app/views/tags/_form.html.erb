<div class="modal-wrapper">
    <%= form_for(tag, remote: true, method: :patch, html: {class: 'settings tags-form', data: {behavior: "disable_on_submit"}}) do |f| %>
        <% content_for :modal_content do %>
            <div class="modal-header-input">
                <%= f.text_field :name, placeholder: tag.name, data: {behavior: "autofocus"} %>
                <span class="icon"><%= svg_tag "favicon-tag", size: "16x16" %></span>
            </div>
        <% end %>

        <% content_for :modal_footer do %>
            <%= link_to tag_path(tag), method: :delete, remote: true, class: "button-text delete-button text-sm", data: { confirm: "Are you sure you want to delete this tag?" } do %>
                <%= svg_tag "icon-delete", size: "13x16" %> Delete
            <% end %>
            <button type="button" class="button button-secondary" data-dismiss="modal" aria-label="Cancel">Cancel</button>
            <button type="submit" class="button">Save</button>
        <% end %>

        <%= render template: "layouts/modal_inner", locals: {purpose: "edit"} %>
    <% end %>
</div>
